void switchCheck(int num)
{
	switch(num)
	{
		case 1:
			bahirDarFun();
			break;
            case 2:
            	gondarFun();
            	break;
            case 3:
            	axumFun();
            	break;
            case 4:
            	laliFun();
            	break;
            case 5:
            	semienFun();
			break;
	}
}
void bahirDarFun()
{
	if(retval==1)
                       {
